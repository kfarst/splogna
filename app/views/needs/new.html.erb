<h1>Needs</h1>
<p>Describe your need</p>
<%= form_for(@need) do |f| %>
  <label for="need_title">Title</label><br/>
  <%= f.text_field :title %><br/>
  <label for="need_description">Description</label><br/>
  <%= f.text_area :description %><br/>
  <label for="need_tag_list">Tags</label><br/>
  <%= f.text_field :tag_list %><br/>
  <%= submit_tag("Save") %>
<% end %>
